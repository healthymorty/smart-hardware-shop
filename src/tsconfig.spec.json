/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"outDir": "../out-tsc/spec",
		"module": "commonjs",
		"target": "es6",
		"noUnusedLocals": false,
		"types": [ "node", "jest" ],
		"downlevelIteration": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true
	},
	"files": [
		"test.ts",
		"polyfills.ts"
	],
	"include": [
		"**/*.spec.ts",
		"**/*.d.ts"
	]
}